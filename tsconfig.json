{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node"],
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "typeRoots": ["./node_modules/@types", "./shared/typings"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    }
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "tests/**/*.ts", "typings/*"],
  "exclude": ["node_modules", "build/**"]
}
